{% extends 'base.html.twig' %}

{% block title %}Lunamates{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="/assets/css/styles.css">
{% endblock %}

{% block javascripts %}
<script src="/assets/js/loginvalidate.js"></script>
<script src="/assets/js/dark.js"></script>
<script src="/assets/js/cookies.js"></script>
{% endblock %}

{% block body %}
<div class="bg">
  <!-- Navbar -->
  <nav role="navigation">
    <div id="menuToggle">
      <input type="checkbox" />
      <span></span>
      <span></span>
      <span></span>

      <ul id="menu">
        <a href="/about"><li>About</li></a>
        <a href="/register"><li>Register</li></a>
        <div id="mode"><li>Change Theme</li></div>
      </ul>
    </div>
  </nav>
  <!-- Login Form -->
  <div class="container h-100 d-flex align-items-center justify-content-center">
    <div class="offset-xl-1 content">
      <h2 class="heading">LOGIN</h2>
      <p>Enter your emailid and password to connect with others...</p>
      <form action="/" method="POST">
        <div class="d-flex align-items-center">
          <label for="email" class="flex-fill input">EMAILID: <span class="pr-3 required">*</span></label>
          <input type="text" name="email" id="email" class="flex-fill entries" placeholder="Enter email address" required>
        </div>
        <span id="email-error" class="error"></span>

        <div class="d-flex align-items-center">
          <label for="pass" class="flex-fill input">PASSWORD: <span class="required">*</span></label>
          <input type="password" id="pass" name="pass" class="flex-fill entries" placeholder="Enter password" required>
          <i id="show" class="fa fa-eye flex-fill input"></i>
        </div>
        <span id="pass-error" class="error"></span>
        <div class="connect forgot"><a href="/forgot" class="link">Forgot Password?</a></div>

        <div><input type="submit" name="login" id="login" class="btn login" value="LOGIN"></div>
        <div class="connect">Don't have a account yet?
          <a href="/register" class="link">Register Now</a>
        </div>
      </form>

      <!-- Google login -->
      <div class="google-btn" id="g-btn">
        <a id="sign-in" class="sign">
          <div class="google-icon-wrapper">
            <img class="google-icon" src="/assets/images/google-logo.png"/>
          </div>
          <p id="btn-text"><b>Sign in with google</b></p>
        </a>
      </div>
    </div>
  </div>
</div>
{% endblock %}
